    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= @page_title
    = csrf_meta_tags
    %meta{:content => "#{@keyword_meta_tag}", :name => "keywords"}/
    = stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload'

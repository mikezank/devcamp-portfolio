<h1>Angular Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_url %>

<% @portfolio_angular_items.each do |p| %>
  <p><%= link_to p.title, portfolio_path(p) %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image unless p.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(p) %>
  <%= link_to "Delete", p, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
